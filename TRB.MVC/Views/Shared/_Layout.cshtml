<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Royal Book</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div class="header-wrapper" style="z-index: 1;">
            <div class="header-inner">
                <h1>The Royal Book</h1>
                <div class="header-button">
                    <a class="btn" href="#"></a>
                </div>
            </div>
        </div>
    </header>
    <div id="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Royal Book</p>
        </footer>
    </div>

    @* SCRIPTS SECTION *@
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/custom/common.js"></script>

    @RenderSection("scripts", required: false)
    @* END of SCRIPTS SECTION *@
</body>
</html>